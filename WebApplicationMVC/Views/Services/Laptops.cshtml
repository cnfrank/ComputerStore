
@{
    ViewData["Title"] = "Laptops";
    Layout = "_AdLayout";
}

<h1>Laptops</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>RAM</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Laptop rig in Model)
        {
            
        
        <tr>
            <td>@rig.Name</td>
                <td>@($"{rig.Price:C2}")</td>
                <td>@rig.Name</td>
                <td>@rig.RAM</td>
        </tr>

        }
    </tbody>
</table>